---
import Layout from '../layouts/Layout.astro';
import App from '../components/App';
---

<Layout
  title="Point Collab"
  description="A multiplayer app for pointing stories"
>
  <main>
    <div class="header">
      <div class="headerContent">
        <div class="headerLeft">
          <a href="/"><h1>Point Collab</h1></a>
        </div>
      </div>
      <div class="headerBar1"></div>
      <div class="headerBar2"></div>
    </div>
    <article>
      <h2>Privacy Policy</h2>
      <p>
        We don't collect any data from you. There are no ads or trackers present
        in this app, and there never will be. Only enter information, such as
        names and story ids or links, that you are comfortable with being seen
        by others. If you would like to have a team deleted, please email the
        team ID to greysonrichey (at) gmail.com with the subject "Please Delete
        My Team".
      </p>
    </article>
    <div class="footerContainer">
      <span
        >Made with ‚ù§ by <a href="https://grichey.me">Greyson Richey</a> and <a
          href="https://www.linkedin.com/in/annemnichols/">Anne Nichols</a
        ></span
      >
      <a href="/" class="privacy">Back to app</a>
    </div>
  </main>
</Layout>

<style>
  article {
    grid-area: content;
    padding: 32px;
  }

  article > h2 {
    color: white;
  }

  h1 {
    color: var(--orange-400);
    font-family: 'Calistoga', sans-serif;
    font-size: 48px;
    font-weight: 400;
    margin: 0;
  }

  main {
    display: grid;
    grid-template-areas:
      'header header header'
      'content content content'
      'content content content'
      'content content content'
      'footer footer footer';
    grid-template-rows: 140px 1fr 1fr 1fr 60px;
    min-height: 100vh;
  }

  p {
    font-family: 'Bellota Text', sans-serif;
    font-size: 20px;
  }

  .footerContainer {
    align-items: center;
    background: var(--orange-100);
    color: var(--orange-400);
    display: flex;
    font-family: 'Bellota Text', sans-serif;
    font-size: 20px;
    font-weight: 700;
    grid-column-end: span 3;
    justify-content: center;
    grid-area: footer;
    gap: 32px;
  }

  .header {
    background: var(--orange-100);
    display: flex;
    flex-direction: column;
    gap: 8px;
    grid-area: header;
    justify-content: center;
    padding: 32px 42px 0px 42px;
  }

  .headerContent {
    display: flex;
  }

  .headerLeft {
    flex-grow: 1;
    justify-items: left;
  }

  .headerRight {
    align-items: end;
    display: flex;
    flex-grow: 1;
    justify-content: right;
    margin-bottom: 10px;
  }

  .headerBar1 {
    background: var(--orange-200);
    height: 10px;
    justify-self: center;
    margin-left: -42px;
    width: calc(100% + 84px);
  }

  .headerBar2 {
    background: var(--orange-300);
    height: 20px;
    justify-self: center;
    margin-bottom: 8px;
    margin-left: -42px;
    width: calc(100% + 84px);
  }

  .privacy {
    margin-top: 3px;
  }
</style>
